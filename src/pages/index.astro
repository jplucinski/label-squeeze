---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Steps from "../components/Steps.astro";
import FileUpload from "../components/FileUpload.astro";
import FileList from "../components/FileList.astro";
import Preview from "../components/Preview.astro";
import PageSelectorModal from "../components/PageSelectorModal.astro";
---

<Layout
  title="Label Squeeze - Merge A6 Shipping Labels to A4 | Free PDF Tool"
  description="Free online tool to merge multiple A6 shipping labels into A4 pages. Save paper and reduce printing costs for e-commerce businesses. Client-side processing ensures privacy and security."
  keywords="shipping labels, A6 to A4 converter, PDF merge tool, label printing, paper saving, e-commerce labels, PDF combiner, shipping label tool, free PDF tool, label automation"
>
  <main class="container mx-auto px-4 py-4 md:py-8 max-w-7xl">
    <Header />
    <Steps />

    <div class="grid lg:grid-cols-2 gap-6 md:gap-10 mt-8 md:mt-16">
      <div class="space-y-6">
        <FileUpload />
        <FileList />
      </div>
      <Preview />
    </div>
  </main>
  <PageSelectorModal />
</Layout>

<script>
  // Initialize PDF handling
  import { initPdfHandler } from "../utils/pdfHandler";
  initPdfHandler();
</script>
